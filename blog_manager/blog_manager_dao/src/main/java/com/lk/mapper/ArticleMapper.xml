        FROM
            article a
            LEFT JOIN category c ON a.article_parent_category_id = c.category_id
            LEFT JOIN category d ON a.article_child_category_id = d.category_id
    </select>-->
    <select id="selectCustomArticle" resultMap="articleResult">
        select
          <include refid="Article_Base_Column"></include>
        from article
    </select>
    <select id="selectCategories" parameterType="int[]" resultMap="categoryResult">
        select
          <include refid="Category_Base_Column"></include>
        from category
          where category_id in
        <foreach collection="array" item="cid" open="(" close=")" separator=",">
            #{cid}
        </foreach>
    </select>
    <select id="selectTags" parameterType="int[]" resultMap="tagResult">
        select
          <include refid="Tag_Base_Column"></include>
        from tag
          where tag_id in
          <foreach collection="array" item="tid" open="(" close=")" separator=",">
              #{tid}
          </foreach>
    </select>

</mapper>