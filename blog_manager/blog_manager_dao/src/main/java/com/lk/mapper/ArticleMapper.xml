<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lk.mapper.ArticleMapper">
    <resultMap id="categoryResult" type="com.lk.pojo.Category">
        <id column="category_id" property="categoryId" jdbcType="INTEGER"></id>
        <result column="category_pid" property="categoryPid" jdbcType="INTEGER"></result>
        <result column="category_name" property="categoryName" jdbcType="VARCHAR"></result>
        <result column="category_description" property="categoryDescription" jdbcType="VARCHAR"></result>
        <result column="category_order" property="categoryOrder" jdbcType="INTEGER"></result>
        <result column="category_icon" property="categoryIcon" jdbcType="VARCHAR"></result>
        <result column="category_status" property="categoryStatus" jdbcType="INTEGER"></result>
    </resultMap>
    <resultMap id="tagResult" type="com.lk.pojo.Tag">
        <id column="tag_id" property="tagId" jdbcType="INTEGER"></id>
        <result column="tag_name" property="tagName" jdbcType="VARCHAR"></result>
        <result column="tag_description" property="tagDescription" jdbcType="VARCHAR"></result>
        <result column="tag_status" property="tagStatus" jdbcType="INTEGER"></result>
    </resultMap>

    <resultMap id="customerArticleResult" type="com.lk.pojo.custom.CustomerArticle">
        <id column="article_id" property="articleId" jdbcType="INTEGER"></id>
        <result column="article_title" property="articleTitle" jdbcType="VARCHAR"></result>
        <result column="article_order" property="articleOrder" jdbcType="INTEGER"></result>
        <result column="article_post_time" property="articlePostTime" jdbcType="TIMESTAMP"></result>
        <result column="article_tag_ids" property="articleTagIds" jdbcType="INTEGER"></result>
        <result column="category_parent_name" property="category_parent_name" jdbcType="VARCHAR"></result>
        <result column="category_child_name" property="category_child_name" jdbcType="VARCHAR"></result>
    </resultMap>
    <sql id="Category_Base_Column">
        category_id,category_pid,category_name,category_description,category_order,category_icon,category_status
    </sql>
    <select id="selectAllArticle" resultMap="customerArticleResult">
        SELECT
            a.article_id,
            a.article_title,
            a.article_order,
            a.article_post_time,
            a.article_tag_ids,
            c.category_name category_parent_name,
            d.category_name category_child_name
        FROM
            article a
            LEFT JOIN category c ON a.article_parent_category_id = c.category_id
            LEFT JOIN category d ON a.article_child_category_id = d.category_id
    </select>
    <select id="selectTags" parameterType="int[]" resultMap="tagResult">
        select
          tag_name
        from tag
          where tag_id in
          <foreach collection="array" item="tid" open="(" close=")" separator=",">
              #{tid}
          </foreach>
    </select>
</mapper>